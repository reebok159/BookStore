%main.container.general-main-wrap
  .text-center
    %h3.general-login-title
      = t('.sign_up')
    %a.general-login-icon{href: user_facebook_omniauth_authorize_path}
      %i.fa.fa-facebook-official
    %p.general-login-text or
  = simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "general-form" }) do |f|
    = f.error_notification
    .form-group.mb-30
      = f.label :email, t(".enter_email"), class: "control-label input-label"
      = f.input :email, required: false, autofocus: true, input_html: { class: "form-control"}, placeholder: t(".enter_email"), label: false
    .form-group.mb-30
      = f.label :password, t(".password"), class: "control-label input-label"
      = f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length && f.error_notification.nil?), placeholder: t(".password"), input_html: { class: "form-control", id: "password"}, label: false
    .form-group.mb-30
      = f.label :password, t(".confirm_password"), class: "control-label input-label"
      = f.input :password_confirmation, required: false, placeholder: t(".confirm_password"), input_html: { class: "form-control", id: "password" }, label: false
    .text-center
      %button.btn.btn-default.mb-20
        = t('action.signup')
  %p.general-sign-text.text-center
    = t(".have_an_account")
    %a.in-gold-500{href: new_user_session_path}
      = t('action.login')
