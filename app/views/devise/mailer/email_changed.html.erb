<p><%= t('.greeting', :recipient => @resource.email, :default => "Hello #{@resource.email}!") %></p>

<% if @resource.try(:unconfirmed_email?) %>
  <p><%= t('.instruction_1', :email => @resource.unconfirmed_email) %>.</p>
<% else %>
  <p><%= t('.instruction_1', :email => @resource.email) %>.</p>
<% end %>
