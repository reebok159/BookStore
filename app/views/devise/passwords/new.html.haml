%main.container.general-main-wrap
  .text-center
    %h1.mb-30
      = I18n.t('password.new.forgotpass')
    %p.general-password-text
      = I18n.t('password.new.howtoresetphrase')
  = simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "general-form" }) do |f|
    .form-group.mb-25
      = f.input :email, required: true, autofocus: true, input_html: { class: "form-control"}, placeholder: I18n.t('password.new.entermail'), label: false
    .text-center
      = f.button :submit, I18n.t('password.new.emailinstructions'), class: "btn btn-default mb-20"
      .text-center
        = link_to I18n.t('password.new.cancel'), new_user_session_path, class: "in-gold-500 mb-20"





